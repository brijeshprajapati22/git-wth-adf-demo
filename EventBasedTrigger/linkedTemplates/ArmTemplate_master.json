{
	"$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
	"contentVersion": "1.0.0.0",
	"parameters": {
		"factoryName": {
			"type": "string",
			"metadata": "Data Factory name",
			"defaultValue": "EventBasedTrigger"
		},
		"CosmosDb1_connectionString": {
			"type": "secureString",
			"metadata": "Secure string for 'connectionString' of 'CosmosDb1'"
		},
		"SQLSERVERLinkServices_connectionString": {
			"type": "secureString",
			"metadata": "Secure string for 'connectionString' of 'SQLSERVERLinkServices'"
		},
		"adlstore2demo_AzureBlobStorage_connectionString": {
			"type": "secureString",
			"metadata": "Secure string for 'connectionString' of 'adlstore2demo_AzureBlobStorage'"
		},
		"EventBasedTrigger_properties_EventTrigger_parameters_SourcePath": {
			"type": "string",
			"defaultValue": "@triggerBody().folderPath"
		},
		"EventBasedTrigger_properties_EventTrigger_parameters_SourceFileName": {
			"type": "string",
			"defaultValue": "@triggerBody().fileName"
		},
		"EventBasedTrigger_properties_typeProperties_scope": {
			"type": "string",
			"defaultValue": "/subscriptions/35ea27e0-8f51-42c4-ba42-fa597b70aa03/resourceGroups/Training-Demo/providers/Microsoft.Storage/storageAccounts/adlstore2demo"
		},
		"containerUri": {
			"type": "string",
			"metadata": "URI to storage account containing linked ARM templates"
		},
		"containerSasToken": {
			"type": "string",
			"metadata": "Sas token to storage account containing linked ARM templates"
		}
	},
	"variables": {
		"factoryId": "[concat('Microsoft.DataFactory/factories/', parameters('factoryName'))]"
	},
	"resources": [
		{
			"name": "EventBasedTrigger_ArmTemplate_0",
			"type": "Microsoft.Resources/deployments",
			"apiVersion": "2018-02-01",
			"properties": {
				"mode": "incremental",
				"templateLink": {
					"uri": "[concat(parameters('containerUri'), '/ArmTemplate_0.json', parameters('containerSasToken'))]",
					"contentVersion": "1.0.0.0"
				},
				"parameters": {
					"factoryName": {
						"value": "[parameters('factoryName')]"
					},
					"CosmosDb1_connectionString": {
						"value": "[parameters('CosmosDb1_connectionString')]"
					},
					"SQLSERVERLinkServices_connectionString": {
						"value": "[parameters('SQLSERVERLinkServices_connectionString')]"
					},
					"adlstore2demo_AzureBlobStorage_connectionString": {
						"value": "[parameters('adlstore2demo_AzureBlobStorage_connectionString')]"
					}
				}
			},
			"dependsOn": []
		},
		{
			"name": "EventBasedTrigger_ArmTemplate_1",
			"type": "Microsoft.Resources/deployments",
			"apiVersion": "2018-02-01",
			"properties": {
				"mode": "incremental",
				"templateLink": {
					"uri": "[concat(parameters('containerUri'), '/ArmTemplate_1.json', parameters('containerSasToken'))]",
					"contentVersion": "1.0.0.0"
				},
				"parameters": {
					"factoryName": {
						"value": "[parameters('factoryName')]"
					},
					"EventBasedTrigger_properties_EventTrigger_parameters_SourcePath": {
						"value": "[parameters('EventBasedTrigger_properties_EventTrigger_parameters_SourcePath')]"
					},
					"EventBasedTrigger_properties_EventTrigger_parameters_SourceFileName": {
						"value": "[parameters('EventBasedTrigger_properties_EventTrigger_parameters_SourceFileName')]"
					},
					"EventBasedTrigger_properties_typeProperties_scope": {
						"value": "[parameters('EventBasedTrigger_properties_typeProperties_scope')]"
					}
				}
			},
			"dependsOn": [
				"[resourceId('Microsoft.Resources/deployments', 'EventBasedTrigger_ArmTemplate_0')]"
			]
		}
	]
}